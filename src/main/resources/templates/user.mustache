{{>header}}

<div class="row center-align">
    <h3>User</h3>
</div>

<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Username</th>
        <th>Email</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{user.id}}</td>
            <td>{{user.name}}</td>
            <td>{{user.surname}}</td>
            <td>{{user.username}}</td>
            <td>{{user.email}}</td>
        </tr>
    </tbody>
</table>

<div class="row center-align">
    <h3>Full day time off</h3>
</div>

<table>
    <thead>
    <tr>
        <th>From</th>
        <th>To</th>
    </tr>
    </thead>
    <tbody>
    {{#fullDayTimeOff}}
        <tr>
            <td><a href="/mvc/user/deleteFullDayTimeOff/{{id}}">{{id}}</a></td>
            <td>{{this.start}}</td>
            <td>{{this.end}}</td>
        </tr>
    {{/fullDayTimeOff}}
    </tbody>
</table>

<div class="row center-align">
    <h3>Partial day time off</h3>
</div>

<table>
    <thead>
    <tr>
        <th>id</th>
        <th>Date</th>
        <th>From</th>
        <th>To</th>
    </tr>
    </thead>
    <tbody>
    {{#partialDayTimeOff}}
        {{#timeRanges}}
            <tr>
                <td><a href="/mvc/user/deletePartialDayTimeOffTimeRange/{{id}}">{{id}}</a></td>
                <td>{{timeOffDay}}</td>
                <td>{{start}}</td>
                <td>{{end}}</td>
            </tr>
        {{/timeRanges}}
    {{/partialDayTimeOff}}
    </tbody>
</table>

{{>footer}}